{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Haute Cuisine Documentation",
        "description": "APIs that manage the main functionalities for the haute cuisine web application"
    },
    "servers": [
        {
          "url": "http://localhost:8080/api/v1",
          "description": "Localhost server"
        },
        {
          "url": "https://recipe-backend.onrender.com/api/v1",
          "description": "Staging server from render"
        },
        {
          "url": "project-recipe-backend-production.up.railway.app",
          "description": "Staging server from railway"
        }
      ],
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string"
                    },
                    "otherNames": {
                        "type": "string"
                    },
                    "msisdn": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "countryCode": {
                        "type": "string"
                    },
                    "isoCode": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "gender": {
                        "type": "string"
                    },
                    "invalidLoginAttemps": {
                        "type": "number"
                    },
                    "lockCoeff": {
                        "type": "number"
                    },
                    "lockPeriod": {
                        "type": "string"
                    },
                    "userLockStatus": {
                        "type": "boolean"
                    },
                    "activated": {
                        "type": "boolean"
                    },
                    "isOtpConfirmed": {
                        "type": "boolean"
                    },
                    "version": {
                        "type": "number"
                    }
                }
            },
            "Success Response": {
                "type": "object",
                "properties": {
                     "code": {
                         "type": "string"
                     },
                     "msg": {
                         "type": "string"
                     },
                     "data": {
                         "type": "object"
                     },
                     "token": {
                        "type": "string"
                    },
                     "error": {
                         "type": "object",
                         "properties": {
                            "error": {
                                "type": "boolean"
                            },
                            "errMsg": {
                                "type": "string"
                            },
                            "detailedError": {
                                "type": "object"
                            }
                         }
                     }
                }
            },
            "Error Response": {
                "type": "object",
                "properties": {
                     "code": {
                         "type": "string"
                     },
                     "msg": {
                         "type": "string"
                     },
                     "data": {
                         "type": "null"
                     },
                     "error": {
                         "type": "object",
                         "properties": {
                            "error": {
                                "type": "boolean"
                            },
                            "errMsg": {
                                "type": "string"
                            },
                            "detailedError": {
                                "type": "object"
                            }
                         }
                     }
                }
            }
            
        }
    },
    "tags": [
        {
            "name": "user",
            "description": "This contains all functionalities for user"
        },
        {
            "name": "recipe",
            "description": "This contains all functionalities for recipies"
        }
    ],
    "paths": {
        "/users/login":{
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "route for users to login into haute cuisine",
                "requestBody": {
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "msisdn": {
                                        "type": "string"
                                    },
                                    "countryCode": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "A success object when the user logs in",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Success Response"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "An error occured",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error Response"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/register":{
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "route for users to sign up onto haute cuisine",
                "requestBody": {
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "firstName": {
                                        "type": "string"
                                    },
                                    "otherNames": {
                                        "type": "string"
                                    },
                                    "msisdn": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "confirmPassword": {
                                        "type": "string"
                                    }, 
                                    "countryCode": {
                                        "type": "string"
                                    },
                                    "isoCode": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "A success object when the user registers",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Success Response"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "An error occured",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error Response"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/confirm-otp":{
            "put": {
                "tags": [
                    "user"
                ],
                "summary": "route for users to confirm the otp",
                "requestBody": {
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "msisdn": {
                                        "type": "string"
                                    },
                                    "code": {
                                        "type": "string"
                                    },
                                    "countryCode": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "A success object when the user confirms the otp",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Success Response"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "An error occured",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error Response"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/reset":{
            "put": {
                "tags": [
                    "user"
                ],
                "summary": "route for users to reset their password",
                "requestBody": {
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "msisdn": {
                                        "type": "string"
                                    },
                                    "countryCode": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "A success object when the user confirms the otp",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Success Response"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "An error occured",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error Response"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/":{
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "route to get a user",
                "responses": {
                    "200": {
                        "description": "A success object when the user confirms the otp",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Success Response"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "An error occured",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error Response"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/resend":{
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "route for users to resend OTP (One Time Password)",
                "requestBody": {
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "msisdn": {
                                        "type": "string"
                                    },
                                    "countryCode": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "A success object when the user confirms the otp",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Success Response"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "An error occured",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error Response"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/logout":{
            "delete": {
                "tags": [
                    "user"
                ],
                "summary": "route for users to logout",
                "responses": {
                    "200": {
                        "description": "A success object when the user confirms the otp",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Success Response"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "An error occured",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error Response"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}